<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/release_dynamic_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <TextView
            android:id="@+id/release_dynamic_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="发动态"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/release_dynamic_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/release_dynamic_title_put"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="发布"
            android:layout_marginTop="17dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:clickable="true"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/release_dynamic_title_layout">

        <ScrollView
            android:id="@+id/release_dynamic_edit_scroll"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <EditText
                android:id="@+id/release_dynamic_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="记录你的经历与感受..."/>
        </ScrollView>


        <ImageView
            android:id="@+id/release_dynamic_picture"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/release_dynamic_edit_scroll" />

        <TextView
            android:id="@+id/release_dynamic_add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="+图片"
            android:textSize="20dp"
            android:textColor="@color/wheat"/>

    </RelativeLayout>

</RelativeLayout>