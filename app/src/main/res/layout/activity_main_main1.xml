<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--帮首页界面-->

    <!--帮首页标题栏-->
    <RelativeLayout
        android:id="@+id/main1_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/main1_titlebar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="帮首页"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/black"/>
    </RelativeLayout>

    <!--社区导航-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/main1_push_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main1_layout_1" />

    <!--社区红人-->
    <TextView
        android:id="@+id/main1_text_use_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main1_push_recycler"
        android:gravity="center"
        android:clickable="true"
        android:text="-社区红人榜-"/>


    <ListView
        android:id="@+id/use_star_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main1_text_use_star">
    </ListView>


</RelativeLayout>