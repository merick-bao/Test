<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp"
        android:textColor="@color/black"
        android:clickable="true"/>
    <!--注册界面logo-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="加入社区"
            android:layout_marginTop="50dp"
            android:textSize="50dp"
            android:textColor="@color/burlywood"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="30dp">
        <EditText
            android:id="@+id/register_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号/邮箱"
            android:layout_alignParentTop="true"
            android:inputType="number"/>
        <EditText
            android:id="@+id/register_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码（最少6位）"
            android:layout_below="@+id/register_username_input"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/register_nickname_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="昵称"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/register_password_input"
            android:inputType="text"/>
        <Button
            android:id="@+id/register_next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/register_nickname_input"
            android:text="下一步"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击下一步获取验证码"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@+id/register_next_button"/>
    </RelativeLayout>

</LinearLayout>