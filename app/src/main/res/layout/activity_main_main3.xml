<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--帮商家标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="帮商家"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white" />

        <TextView android:id="@+id/main3_add_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:text="添加"
            android:textColor="@color/white"
            android:layout_marginTop="17dp"
            android:textSize="15dp"
            android:clickable="true"/>
    </RelativeLayout>

    <!--搜索商家框-->
    <EditText android:id="@+id/main3_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="搜索商家"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:background="@drawable/background_searchhelp_div"/>

    <!--商家求帮助描述-->
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/stroke_div"
        android:layout_margin="8dp">

        <RelativeLayout android:id="@+id/main3_layout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/main3_business_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="头像"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shap_oval_head"
                android:layout_marginLeft="5dp"/>

            <TextView android:id="@+id/main3_business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main3_business_head"
                android:layout_marginLeft="5dp"
                android:text="蔡老板"
                android:textColor="@color/black"/>

            <TextView android:id="@+id/main3_business_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家简介：武汉热干面老板娘"
                android:layout_below="@+id/main3_business_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/main3_business_head"/>

            <ImageView android:id="@+id/main3_business_sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ico_sex_fmale"
                android:layout_toRightOf="@+id/main3_business_name"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/main3_layout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main3_layout01"
            android:layout_marginTop="3dp">

            <TextView android:id="@+id/main3_qusetion_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题简述：店里人手不够，需要周六周日兼职的同学，每天工作6小时"
                android:textColor="@color/black"/>

            <ImageView android:id="@+id/main3_business_location"
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:background="@drawable/ico_location"
                android:layout_below="@+id/main3_qusetion_describe"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>

            <TextView android:id="@+id/main3_business_location_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看定位"
                android:layout_toRightOf="@+id/main3_business_location"
                android:layout_below="@+id/main3_qusetion_describe"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:textColor="@color/blue"/>

            <ImageView android:id="@+id/main3_pay"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ico_money"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/main3_business_location"/>

            <TextView android:id="@+id/main3_pay_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报酬：120/天  日结"
                android:layout_below="@+id/main3_business_location"
                android:layout_toRightOf="@+id/main3_pay"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/black"/>

            <ImageView android:id="@+id/main3_time_photo"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/ico_time_table"
                android:layout_below="@+id/main3_pay_describe"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="7dp" />

            <TextView android:id="@+id/mian3_time_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main3_time_photo"
                android:layout_below="@+id/main3_pay_describe"
                android:text="剩余帮助时间：3天15小时"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <LinearLayout android:id="@+id/main3_layout03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main3_layout02"
            android:layout_marginTop="3dp">

            <Button android:id="@+id/main3_buton_lookdetails"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/button_div"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="查看详情"/>

            <Button android:id="@+id/main3_buton_takehelp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="去帮他"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/button_div"/>

            <Button android:id="@+id/main3_buton_share"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="分享"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/button_div"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>