            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--个人信息以及修改-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="20dp"
                android:background="@drawable/storke_comment_edittext_div">

                <TextView android:id="@+id/main5_use_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="头像"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/shap_oval_head" />

                <TextView android:id="@+id/main5_use_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陈小谋"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_toRightOf="@+id/main5_use_head"
                    android:layout_marginLeft="8dp"/>

                <TextView android:id="@+id/main5_use_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人简介：IT男"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/main5_use_head"
                    android:layout_below="@+id/main5_use_name"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"/>

                <Button android:id="@+id/main5_change_usedata"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="修改资料>"
                    android:textSize="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:background="@drawable/button_div"/>

            </RelativeLayout>

            <!--item1-->
